<h1>Eat-Da-Burger</h1>

<h2>Not Eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      
      <li>
	{{name}}

	<button class="change-devour" data-id="{{id}}" >
		Devour It!
	</button>
	
        </li>
    {{/unless}}
    
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{name}}
      
    {{/if}}
   
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add burger</button>
</form>
